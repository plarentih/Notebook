<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enterprise.lu.uni.notebook.app.activity.StartingActivity"
    android:background="@color/background_material_lighti"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/buttonNewWord"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:text="New Word"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/background_material_lighti"
        android:background="@drawable/buttoncolor"
        app:layout_constraintBottom_toTopOf="@+id/buttonNotebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonNotebook"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:text="Notebook"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/background_material_lighti"
        app:layout_constraintBottom_toTopOf="@+id/buttonDomains"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/buttoncolor"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonDomains"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:text="Domains"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/background_material_lighti"
        app:layout_constraintBottom_toTopOf="@+id/buttonExam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/buttoncolor"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="195dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:layout_marginBottom="203dp"
        android:layout_marginTop="204dp"
        android:text="Notebook"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDomains"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/buttonExam"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:text="Exam Mode"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/background_material_lighti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/buttoncolor"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
